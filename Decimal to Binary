#To convert a decimal number to binary.
import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner obj = new Scanner(System.in);
        int n = obj.nextInt();
        String binary = "";
        while (n > 0) {
            int rem = n % 2;       
            binary = rem + binary;  
            n = n / 2;             
        }
        System.out.println(binary);
    }
}
